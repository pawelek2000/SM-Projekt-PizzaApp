<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center_horizontal">
    <TextView
        android:id="@+id/edit_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="@string/dough_parameters"
        android:textSize="30dp" />

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="20dp">

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center_horizontal">
            <TextView
                android:id="@+id/number_of_doughballs_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/number_of_doughballs"
                android:layout_margin="10dp"
                android:textSize="20dp" />

            <NumberPicker
                android:id="@+id/number_of_doughballs"
                android:layout_width="120dp"
                android:layout_height="60dp"
                android:layout_margin="20dp" />

        </LinearLayout>

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center_horizontal">
            <TextView
                android:id="@+id/doughball_weight_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="@string/doughball_weight"
                android:textSize="20dp" />

            <NumberPicker
                android:layout_width="120dp"
                android:layout_height="60dp"
                android:id="@+id/doughball_weight"
                android:layout_margin="20dp"/>

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/hydration_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="@string/hydration"
        android:textSize="20dp" />

    <NumberPicker
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:id="@+id/hydration"
        android:layout_margin="10dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="@string/required_values"
        android:textSize="20dp" />
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="10dp">

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center_horizontal">
            <TextView
                android:id="@+id/tp_blok_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TP BLOK"
                android:layout_margin="5dp"
                android:textSize="20dp" />

            <NumberPicker
                android:id="@+id/tp_blok"
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:layout_margin="10dp" />

        </LinearLayout>

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center_horizontal">
            <TextView
                android:id="@+id/tk_blok_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="TK BLOK"
                android:textSize="20dp" />

            <NumberPicker
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:id="@+id/tk_blok"
                android:layout_margin="10dp"/>

        </LinearLayout>
        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center_horizontal">
            <TextView
                android:id="@+id/tp_kulki_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TP KULKI"
                android:layout_margin="5dp"
                android:textSize="20dp" />

            <NumberPicker
                android:id="@+id/tp_kulki"
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:layout_margin="10dp" />

        </LinearLayout>

    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/optional_values"
        android:textSize="20dp"
        android:layout_marginTop="10dp"/>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="10dp">


        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center_horizontal">
            <TextView
                android:id="@+id/tk_kulki_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TK KULKI"
                android:layout_margin="5dp"
                android:textSize="20dp" />

            <NumberPicker
                android:id="@+id/tk_kulki"
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:layout_margin="10dp" />

        </LinearLayout>

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center_horizontal">
            <TextView
                android:id="@+id/tp_kulki2_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="TP KULKI 2"
                android:textSize="20dp" />

            <NumberPicker
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:id="@+id/tp_kulki2"
                android:layout_margin="10dp"/>

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/button_save"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:text="@string/add_dough_button" />


</LinearLayout>